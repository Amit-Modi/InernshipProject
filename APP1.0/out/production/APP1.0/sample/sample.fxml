<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.media.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="scene" onMouseEntered="#setProperties" prefHeight="600.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <children>


        <BorderPane fx:id="totalContainer" prefHeight="600.0" prefWidth="1200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <center>
                <VBox fx:id="playAreaContainer" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="TOP_LEFT">
                    <children>
                        <HBox fx:id="lectureContainer" VBox.vgrow="ALWAYS">
                            <children>
                                <ScrollPane fx:id="playarea" minWidth="620.0" prefHeight="338.0" prefWidth="620.0">
                                    <HBox.margin>
                                        <Insets />
                                    </HBox.margin>
                                    <padding>
                                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                                    </padding>
                                </ScrollPane>
                                <VBox fx:id="playerContainer" prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <HBox fx:id="mediaContainer" alignment="CENTER" prefHeight="100.0" prefWidth="200.0" style="-fx-background-color: black;" VBox.vgrow="ALWAYS">
                                            <children>
                                                <MediaView fx:id="mediaView" fitHeight="350.0" fitWidth="430.0" HBox.hgrow="ALWAYS" />
                                            </children>
                                        </HBox>
                                        <HBox fx:id="progressContainer" maxHeight="10.0" minHeight="10.0" prefHeight="10.0">
                                            <children>
                                                <ProgressBar fx:id="mediaProgressBar" prefHeight="10.0" prefWidth="446.0" progress="0.0" HBox.hgrow="ALWAYS" />
                                            </children>
                                        </HBox>
                                        <HBox fx:id="buttonContainer" alignment="CENTER" prefHeight="50.0" spacing="10.0" style="-fx-background-color: black;">
                                            <children>
                                                <Button fx:id="playButton" mnemonicParsing="false" onAction="#playMedia" text="Play" />
                                                <Button mnemonicParsing="false" onAction="#stopMedia" text="Stop" />
                                    <MenuButton fx:id="volumeButton" mnemonicParsing="false" onAction="#muteMedia" popupSide="TOP" text="Volume">
                                      <items>
                                        <MenuItem mnemonicParsing="false" text="Action 1" />
                                        <MenuItem mnemonicParsing="false" text="Action 2" />
                                      </items>
                                    </MenuButton>
                                                <Slider fx:id="timeSlider" />
                                    <Label fx:id="playTime" text=":00/00:00" />
                                            </children>
                                            <padding>
                                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                            </padding>
                                        </HBox>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                        <ScrollPane fx:id="textbox" fitToHeight="true" fitToWidth="true" prefHeight="84.0" prefWidth="1065.0" />
                    </children>
                </VBox>
            </center>
            <left>
                <VBox fx:id="leftMenu" spacing="10.0" BorderPane.alignment="CENTER">
                    <children>
                        <MenuButton mnemonicParsing="false" onMouseEntered="#onEntered" onMouseExited="#onExit" popupSide="RIGHT" stylesheets="@sample.css" text="Chapter 1" VBox.vgrow="NEVER">
                            <items>
                                <MenuItem fx:id="c1_0" mnemonicParsing="false" onAction="#onMenuItemClick" text="Action 1" />
                                <MenuItem fx:id="c1_1" mnemonicParsing="false" onAction="#onMenuItemClick" text="Action 2" />
                            </items>
                            <padding>
                                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                            </padding>
                            <VBox.margin>
                                <Insets />
                            </VBox.margin>
                        </MenuButton>
                        <Button fx:id="nextTopic" mnemonicParsing="false" onAction="#getNextTopic" text="Button" />
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                    <BorderPane.margin>
                        <Insets />
                    </BorderPane.margin>
                </VBox>
            </left>
            <top>
                <HBox spacing="5.0" BorderPane.alignment="CENTER">
                    <children>
                        <Region prefHeight="30.0" prefWidth="130.0" HBox.hgrow="NEVER" />
                        <Button fx:id="previousButton" mnemonicParsing="false" onAction="#previouseButtonAction" prefHeight="30.0" prefWidth="100.0" text="Previous" />
                        <Label alignment="CENTER" prefHeight="30.0" prefWidth="390.0" text="Topic" />
                        <Button fx:id="nextButton" layoutX="20.0" layoutY="15.0" mnemonicParsing="false" onAction="#nextButtonAction" prefHeight="30.0" prefWidth="100.0" text="Next" />
                        <Region prefHeight="30.0" prefWidth="15.0" />
                        <TextField fx:id="currentPage" prefHeight="30.0" prefWidth="40.0" />
                        <Label fx:id="totalPages" contentDisplay="CENTER" graphicTextGap="12.0" prefHeight="30.0" prefWidth="68.0" text="/0" textAlignment="CENTER">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Label>
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="10.0" right="5.0" top="5.0" />
                    </padding>
                </HBox>
            </top>
        </BorderPane>


    </children>
</AnchorPane>
